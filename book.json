{
  "cover": "blog.png",
  "title": "听风雨的博客",
  "author": "luowei", 
  "description": "记录生活和学习的点滴",
  "plugins": [
    "hide-element",
    "chapter-fold",
    "katex",
    "alerts",
    "emphasize",
    "prism",
    "-highlight",
    "localized-footer",
    "mermaid-gb3",
    "ga",
    "accordion",
    "theme-default",
    "atoc",
    "splitter",
    "back-to-top-button",
    "chapter-fold",
    "code",
    "insert-logo",
    "tbfed-pagefooter",
    "change_girls",
    "auto-scroll-table",
    "custom-favicon"
  ],
  "pluginsConfig": {
    "hide-element": {
      "elements": [
        ".gitbook-link"
      ]
    },
    "ga": {
      "token": "UA-153583635-2"
    },
    "atoc": {
      "addClass": true,
      "className": "atoc"
    },
    "code": {
      "copyButtons": true
    },
    "insert-logo": {
      "url": "https://img2.imgtp.com/2024/05/20/QEhwB1kq.png",
      "style": "background: none; max-height: 64px; min-height: 64px"
    },
    "tbfed-pagefooter": {
      "copyright": "Copyright &copy luowei01 2024",
      "modify_label": "该文件修订时间：",
      "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "change_girls": {
      "time": 10,
      "urls": [
        "https://images.pexels.com/photos/1103970/pexels-photo-1103970.jpeg",
        "https://images.pexels.com/photos/311039/pexels-photo-311039.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
      ]
    },
    "favicon": "./favicon.ico"
  }
}